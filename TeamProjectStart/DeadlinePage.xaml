<Page x:Class="TeamProjectStart.DeadlinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProjectStart"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="450"
      Title="DeadlinePage">

    <Grid Background="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="104*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Foreground="White" HorizontalAlignment="Center" FontSize="15" Margin="185,0">Дедлайны</Label>
        <StackPanel Grid.Row="2" Grid.RowSpan="2">
            <TextBlock Foreground="White" Margin="5" />
            <ProgressBar Height="15" Width="150" Margin="5"/>
        </StackPanel>
        <Button Name="buttonAddDeadline" Margin="10,6,0,6" Width="80" Height="18" VerticalAlignment="Center" HorizontalAlignment="Left" Click="buttonAddDeadline_Click">+</Button>
        <Button Name="buttonGoBack" Grid.Row="3" Width="80" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 10 0" Click="buttonGoBack_Click">Назад</Button>
    </Grid>
</Page>
