<Page x:Class="TeamProjectStart.DeadlinePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProjectStart"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="450"
      Title="DeadlinePage">
    <Page.Background>
        <ImageBrush ImageSource="Images\jess-watters-483666-unsplash.jpg"></ImageBrush>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>
        <Label Foreground="Black" FontFamily="Segoe Print" FontSize="20"  HorizontalAlignment="Center" Margin="160,30,158.6,0.4" Grid.RowSpan="2" Width="131" RenderTransformOrigin="-0.042,0.506">Дедлайны</Label>
        <StackPanel Grid.Row="2" Grid.RowSpan="2">
            <TextBlock Foreground="White" Margin="5" />
            <ProgressBar Height="15" Margin="106,5,114.6,5" Background="DarkOrange" RenderTransformOrigin="0.748,0.198"/>
        </StackPanel>
        <Button  Name="buttonAddDeadline" Margin="0,0,0,28.4" Width="38" Height="38" VerticalAlignment="Center" HorizontalAlignment="Left" Click="buttonAddDeadline_Click" Grid.RowSpan="2" BorderThickness="0" Background="Gold">
            <Image Source="Images\add.png" Height="38" Width="28" />
        </Button>
        <Button Name="buttonGoBack"  FontSize="18" Background="Gold"  Grid.Row="2" Height="34" VerticalAlignment="Bottom" Margin="0,0,-0.4,0" Click="buttonGoBack_Click" Grid.RowSpan="2" BorderThickness="0" >Назад</Button>
    </Grid>
</Page>
