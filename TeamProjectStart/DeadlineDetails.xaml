<Page x:Class="TeamProjectStart.DeadlineDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamProjectStart"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="450"
      Title="DeadlineDetails">

    <Grid Background="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="43*"/>
            <RowDefinition Height="208*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Button Name="buttonAddDeadlineDetail" Width="80" Height="18" HorizontalAlignment="Left" Margin="10,8,0,8" RenderTransformOrigin="0.521,-0.499" Click="buttonAddDeadlineDetail_Click">+</Button>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,14,0,13" Foreground="White">Здесь название дедлайна будет дедлайна</TextBlock>
        <StackPanel Grid.Row="2" Grid.RowSpan="3">
            <CheckBox Name="checkBox1" Height="20" Margin="10"/>
        </StackPanel>
        <ProgressBar Name ="ProgressBarTasks" Grid.Row="3" Height="22" Width="220" HorizontalAlignment="Left" Margin="10 0" />
        <Button Name="buttonGoBack" Grid.Row="4" Width="80" Height="18" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,10,10,10" Click="buttonGoBack_Click">Назад</Button>

    </Grid>
</Page>
